<% if (item.tags && item.tags.length){ %>
<%
    var tags = [];
    item.tags.forEach(function(tag){
    	
        tags.push('<a href="' + config.root + tag.path + '">' + tag.name + '</a>');
    });
%>
<span class="blog-tags-container blog-post-meta">
    <span class="fa fa-tags" aria-hidden="true"></span>
    <%- tags.join(' ') %>
</span>
<% } %>